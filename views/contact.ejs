    <%- include("partials/header.ejs") %>
    <body>
        <%- include("partials/nav.ejs") %>
        <div class="container contact-body">
          <div class= "row justify-content-center">
            <div class="col-lg-6 text-center">
            <h1  class= "section-heading">
              Contact the Artist
            </h1>
              <form action="/contact" method="post" class="contact-form">
                <div class="contformgroup">
                  <input
                     type="text"
                     class="contact-form-text"
                     placeholder="name"
                     name="name"
                     required
                     />
                </div>
                <div class="contformgroup">
                  <input
                     type="email"
                     class="contact-form-text"
                     placeholder="name@example.com"
                     name="email"
                     required
                     />
                </div>
                <div class="contformgroup">
                  <input
                     type="text"
                     class="contact-form-text"
                     name="subject"
                     placeholder="subject"
                     required
                     />
                </div>
                <div class="contformgroup">
                  <textarea
                     class="contact-form-message"
                     placeholder="message"
                     name="message"
                     ></textarea>
                </div>
                <div class="contformgroup">
                  <input
                     type="submit"
                     id="form-submit"
                     class="contact-form-btn"
                     value="Send"
                     required
                     />
                </div>
               </form>
                <br>
                    <% if (typeof mailError != "undefined" && mailError) { %>
                    <div class="unsent">
                        <h3 class="error">Error sending email. Please email dohnemus@gmail.com.</h3>
                    </div>
                    <% } else if (typeof mailError != "undefined" && !mailError) { %>
                    <div class="sent">
                       <h3 class="success">Email successfully sent. Please allow 2 business days for a follow-up. Thank you for your email!</h3>
                    </div>
                   <% } %>
            </div>
          </div>
        </div>
        <%- include("partials/footer.ejs") %>
    </body>
    </html>